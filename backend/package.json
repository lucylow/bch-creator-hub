{
  "name": "bch-paywall-router-backend",
  "version": "1.0.0",
  "description": "Backend for BCH Paywall Router",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint src",
    "format": "prettier --write src",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seedDatabase.js",
    "deploy:contracts": "node scripts/deployContracts.js",
    "compile:contract": "node scripts/compile_contract.js",
    "generate:artifacts": "node scripts/generate-artifacts.js",
    "deploy:contracts:new": "node scripts/deploy-contracts.js",
    "deploy:contracts:testnet": "BCH_NETWORK=testnet node scripts/deploy-contracts.js testnet",
    "deploy:contracts:mainnet": "BCH_NETWORK=mainnet node scripts/deploy-contracts.js mainnet",
    "scanner:dev": "node src/jobs/transactionScanner.job.js",
    "scanner": "node src/jobs/transactionScanner.job.js",
    "docker:build": "docker build -t bch-paywall-router .",
    "docker:run": "docker run -p 3001:3001 bch-paywall-router",
    "network:testnet": "node scripts/set-network.js testnet",
    "network:mainnet": "node scripts/set-network.js mainnet",
    "network:status": "node scripts/set-network.js status"
  },
  "dependencies": {
    "@psf/bch-js": "^7.1.9",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "bitcore-lib-cash": "^8.25.0",
    "bull": "^4.11.1",
    "bull-board": "^1.7.2",
    "cashscript": "^0.8.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.9",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "pg": "^8.11.0",
    "prom-client": "^14.2.0",
    "qrcode": "^1.5.4",
    "redis": "^4.6.7",
    "socket.io": "^4.6.1",
    "stripe": "^14.25.0",
    "swagger-ui-express": "^4.6.3",
    "uuid": "^9.0.0",
    "winston": "^3.9.0",
    "ws": "^8.13.0",
    "yaml": "^2.3.0",
    "zeromq": "^6.0.0-beta.20"
  },
  "devDependencies": {
    "eslint": "^8.42.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  }
}
